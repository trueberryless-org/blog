---
import { Icon } from "@astrojs/starlight/components";
import type { StarlightIcon } from "@astrojs/starlight/types";

interface Props {
  icon: StarlightIcon;
  label: string;
  link?: string;
}

const { icon, label, link } = Astro.props;
---

<p class="ai-notice sl-flex">
  <Icon name={icon} size="1.5em" color="var(--sl-color-blue-high)" />
  {!link ? <span>{label}</span> : null}
  {link ? <a href={link}>{label}</a> : null}
</p>

<style>
  @layer starlight.core {
    p {
      border: 1px solid var(--sl-color-blue);
      padding: 0.75em 1em;
      background-color: var(--sl-color-blue-low);
      color: var(--sl-color-blue-high);
      width: max-content;
      max-width: 100%;
      align-items: center;
      gap: 0.75em;
      font-size: var(--sl-text-body-sm);
      line-height: var(--sl-line-height-headings);
    }
  }
  a {
    text-decoration: none;
    color: inherit;
  }
</style>
