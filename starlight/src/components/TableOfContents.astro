---
import Default from "@astrojs/starlight/components/TableOfContents.astro";
import BottomTableOfContentsWrapper from "starlight-cooler-credit/components/BottomTableOfContentsWrapper.astro";
import CreditReferenceCard from "starlight-cooler-credit/components/CreditReferenceCard.astro";
import ReferenceCard from "./ReferenceCard.astro";

import fontStampImage from "../assets/font_stamp.png";
---

<Default><slot /></Default>
<BottomTableOfContentsWrapper>
  <ReferenceCard
    heading="Atkinson Hyperlegible Next™"
    description="The main font I use on this website →"
    link="https://www.brailleinstitute.org/freefont/"
    imagePath={fontStampImage}
    imageAlt="A golden circular stamp with a lowercase 'f', on a textured, transparent background."
    imageWidth={360}
    imageHeight={360}
  />
  <CreditReferenceCard />
</BottomTableOfContentsWrapper>
