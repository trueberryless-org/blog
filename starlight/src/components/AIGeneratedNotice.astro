---
import ContentNotice from "./ContentNotice.astro";
const { starlightRoute } = Astro.locals;
const isLocalized = starlightRoute.lang !== "en";
---

{
  isLocalized ? (
    <ContentNotice
      icon="information"
      label={Astro.locals.t('actionContinuousTranslation.aiNotice')}
      link="https://pelikhan.github.io/action-continuous-translation/"
    />
  ) : null
}
