---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { User, ExternalLink, FileText } from "@lucide/astro";

interface Props {
  image: string;
  title?: string;
  author: string;
  authorUrl?: string;
  source?: string;
  sourceUrl?: string;
  usedOn?: string;
  usedOnUrl?: string;
  alt?: string;
}

const {
  image,
  title,
  author,
  authorUrl,
  source = "Unsplash",
  sourceUrl,
  usedOn,
  usedOnUrl,
  alt = `Photo by ${author}`,
} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/public/**/*.{jpeg,jpg,png,gif}"
);
if (!images[image])
  throw new Error(
    `"${image}" does not exist in glob: "public/**/*.{jpeg,jpg,png,gif}"`
  );
---

<article class="image-credit-card">
  <div class="image-preview">
    <Image
      src={images[image]()}
      alt={alt}
      loading="lazy"
      width={1400}
      height={800}
    />
  </div>

  <div class="credit-info">
    {title && <div class="title">{title}</div>}

    <div class="metadata">
      <div class="metadata-item">
        <User class="icon" size={14} />
        {
          authorUrl ? (
            <a href={authorUrl} target="_blank" rel="noopener noreferrer">
              {author}
            </a>
          ) : (
            <span>{author}</span>
          )
        }
      </div>

      <span class="separator">•</span>

      <div class="metadata-item">
        <ExternalLink class="icon" size={14} />
        {
          sourceUrl ? (
            <a href={sourceUrl} target="_blank" rel="noopener noreferrer">
              {source}
            </a>
          ) : (
            <span>{source}</span>
          )
        }
      </div>

      {
        usedOn && (
          <>
            <span class="separator">•</span>
            <div class="metadata-item">
              <FileText class="icon" size={14} />
              {usedOnUrl ? (
                <a href={usedOnUrl}>{usedOn}</a>
              ) : (
                <span>{usedOn}</span>
              )}
            </div>
          </>
        )
      }
    </div>
  </div>
</article>

<style>
  .image-credit-card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    padding: 1rem;
    background: var(--sl-rapide-ui-bg-color);
    border: 1px solid var(--sl-rapide-ui-border-color);
    border-radius: 0.5rem;
    transition:
      border-color 0.3s ease,
      transform 0.2s ease;
  }

  .image-credit-card:hover {
    border-color: var(--sl-color-accent);
    transform: translateY(-2px);
  }

  @media (min-width: 568px) {
    .image-credit-card {
      flex-direction: row;
      min-height: 120px;
    }
  }

  .image-preview {
    width: 100%;
    height: auto;
    border-radius: 0.375rem;
    overflow: hidden;
    background: var(--sl-color-gray-6);
  }

  @media (min-width: 568px) {
    .image-preview {
      flex-shrink: 0;
      width: 150px;
      height: 86px;
    }
  }

  .image-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .credit-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.5rem;
    flex: 1;
    min-width: 0;
  }

  .title {
    font-size: 1.05rem;
    font-weight: 500;
    line-height: 1.1;
    color: var(--sl-color-white);
    margin: 0;
  }

  @media (min-width: 868px) {
    .title {
      font-size: 1.25rem;
      font-weight: 600;
      line-height: 1.3;
    }
  }

  .metadata {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    column-gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
  }

  .metadata-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--sl-color-gray-3);
  }

  .metadata-item :global(.icon) {
    flex-shrink: 0;
    color: var(--sl-color-gray-3);
    transition: color 0.2s ease;
  }

  .metadata-item a {
    color: var(--sl-color-gray-3);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .metadata-item:has(a:hover) :global(.icon),
  .metadata-item a:hover {
    color: var(--sl-color-accent-high);
  }

  .separator {
    color: var(--sl-color-gray-4);
    user-select: none;
  }

  @media (max-width: 567px) {
    .image-credit-card {
      gap: 1rem;
    }

    .title {
      font-size: 1.1rem;
    }

    .metadata {
      font-size: 0.8125rem;
      gap: 0.5rem;
    }
  }
</style>
