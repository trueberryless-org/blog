---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["image-credits-section not-content", className]}>
  <slot />
</div>

<style>
  .image-credits-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    width: 100%;
    max-width: 100%;
  }
</style>
